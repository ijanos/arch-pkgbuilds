pkgname=hdsentinel
pkgver=0.2
pkgrel=2
pkgdesc="A freeware, closed source HDD monitoring and analysis tool, using SMART"
arch=('i686' 'x86_64')
url="http://www.hdsentinel.com/hdslin.php"
license=('unknown')
depends=()
source=(http://www.hdsentinel.com/hdslin/hdsentinel.gz)
md5sums=('34e87fa25b8b7ab84b112c3a6f602afd')

build() {
  cd $srcdir
  install -m755 -D hdsentinel $pkgdir/usr/sbin/hdsentinel ||return 1
}

