# Contributor: János Illés <ijanos@gmail.com>
pkgname=hdsentinel
pkgver=0.3
pkgrel=3
pkgdesc="A freeware, closed source, SMART analysis tool"
arch=('i686' 'x86_64')
url="http://www.hdsentinel.com/hdslin.php"
license=('unknown')
if [[ $CARCH == "i686" ]]; then
  depends=()
elif [[ $CARCH == "x86_64" ]]; then
  depends=('lib32-glibc')
fi
source=(http://www.hdsentinel.com/hdslin/hdsentinel.gz)
md5sums=('f47044d4eaac5cd3663ecd864ece28be')

build() {
  cd $srcdir
  install -m755 -D hdsentinel $pkgdir/usr/sbin/hdsentinel ||return 1
}

