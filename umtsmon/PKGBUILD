# Contributor: János Illés <ijanos@gmail.com>
pkgname=umtsmon
pkgver=0.9
pkgrel=4
pkgdesc="A tool to manage your UMTS (3G) card/device (send sms, modify pin, monitor traffic)"
url="http://umtsmon.sourceforge.net/"
license="GPL"
arch=('i686' 'x86_64')
depends=('qt3' 'ppp' 'libusb')
optdepends=('gksu: umtsmon will complain if gksu is missing, but works fine after ignoring the error message'
            'usb_modeswitch: devices with ZeroCD functionality may need this to get working'
            'polymer: nice looking QT3 theme without KDE dependencies')
source=(http://dl.sourceforge.net/umtsmon/$pkgname-$pkgver.src.tar.gz)
md5sums=('2f9260d1fc69b230cf0035efa1a962f0')

build() {
  export QTDIR=/opt/qt
  export PATH=/opt/qt/bin:$PATH
  cd $startdir/src/$pkgname-$pkgver

  qmake || return 1
  make all || return 1
  lupdate umtsmon.pro ||return 1
  lrelease umtsmon.pro ||return 1

  install -m755 -D umtsmon $startdir/pkg/usr/sbin/umtsmon
  mkdir -p $startdir/pkg/usr/share/umtsmon/translations/
  cp i18n/*.qm $startdir/pkg/usr/share/umtsmon/translations/
  install -m644 -D umtsmon.desktop $startdir/pkg/usr/share/applications/umtsmon.desktop
  install -m644 -D images/128/umtsmon-128x128.png $startdir/pkg/usr/share/pixmaps/umtsmon-128x128.png
}
